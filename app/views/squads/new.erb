<h1>Create A Squad</h1>

<% if flash[:errors] %>
	<ul>
		<% flash[:errors].each do |message| %>
			<li><%= message %></li>
		<% end %>
	</ul>
<% end %>


<%= form_for @squad do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :size %>
  <%= f.number_field :size %>
  <%= f.submit %>
<% end %>
