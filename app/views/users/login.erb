
<h1>TicketFaster</h1>

<%= flash[:notice] %>

<div class="login_form">
  <%= form_tag "/login"  do %>
    <%= label_tag "Username:" %>
    <%= text_field_tag :username %><br>
    <%= label_tag "Password:" %>
    <%= password_field_tag :password %>
    <%= submit_tag "Login!", class: "ui purple button"%>
    <br>
    <%= link_to "Register here if you don't already have an account", new_user_path %>
  <% end %>
</div>

<div class="error">
  <% if flash[:error]  %>
    <%= flash[:error] %>
  <% end %>
</div>
