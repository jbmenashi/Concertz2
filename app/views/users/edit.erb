<h1>Create/Edit Profile</h1>

<% if flash[:errors] %>
	<ul>
		<% flash[:errors].each do |message| %>
			<li><%= message %></li>
		<% end %>
	</ul>
<% end %>


<div id="edit_form">
	<%= form_for @user do |f| %>
  <%= f.label "Name:" %>
  <%= f.text_field :name %><br>
  <%= f.label "Age:" %>
  <%= f.number_field :age %><br>
  <%= f.label "Bio:" %>
  <%= f.text_field :bio %><br>
  <%= f.label "Image URL:" %>
  <%= f.text_field :image %><br>
  <%= f.submit "Submit", class: "ui inverted standard button" %>
<% end %>
</div>
