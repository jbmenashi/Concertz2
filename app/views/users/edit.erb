<% if flash[:errors] %>
	<ul>
		<% flash[:errors].each do |message| %>
			<li><%= message %></li>
		<% end %>
	</ul>
<% end %>


<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :age %>
  <%= f.number_field :age %>
  <%= f.label :bio %>
  <%= f.text_field :bio %>
  <%= f.label :image %>
  <%= f.text_field :image %>
  <%= f.submit %>
<% end %>
